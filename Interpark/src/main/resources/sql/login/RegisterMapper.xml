	<insert id="aregister">
		insert into tb_userinfo (
		   loginID
		    ,NAME
		    ,password
		    ,M_BIRTH
		    ,M_ACCOUNT
		    ,M_BKNAME
		    ,M_EMAIL
		    ,M_REGDATE
		    ,M_PHONE1
		    ,M_PHONE2
		    ,M_PHONE3
		) values (
		   #{loginID} 
		  ,#{name}
		  ,#{password} 
		  ,STR_TO_DATE(#{birth}, '%Y%m%d') 
		  ,#{account} 
		  ,#{bank}  
		  ,#{mail}  
		  ,now()
		  ,#{tel1}
		  ,#{tel2}
		  ,#{tel3}
		)
	</insert>
	
   <!-- 사용자 로그인-->
   <select id="id_check" resultType="kr.kosmo.jobkorea.login.model.RegisterInfoModel">
      SELECT  COUNT(loginID) AS che
        FROM  tb_userinfo 
       WHERE  loginID = #{loginID}
    </select> 
</mapper>